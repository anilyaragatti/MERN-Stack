        <div class="btns">
            <a href="/listing/<%= listing._id %>/edit " class="btn btn-dark col-1 offset-3 edit-btn">Edit </a>

            <form method="POST" action="/listing/<%=listing._id%>?_method=DELETE">
                <button class="btn btn-dark offset-5 delete-btn">Delete </button>
            </form>
        </div> 
    <!-- < } %> -->

        <div class="col-8 offset-3 mb-3 mt-3">
            <h4>Leave a Review</h4>
            <hr>
            <form action="/listing/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
                <div class="mb-3 mt-3">
                    <label for="rating" class="form-label"> Rating</label>
                    <input type="range" id="rating" name="review[rating]" min="1" max="5" class="form-range">
                </div>

                <div class="mb-3 mt-3">
                    <label for="comment" class="form-label">Comment</label>
                    <textarea id="comment" name="review[comment]" rows="4" cols="50" class="form-control"
                        required></textarea>
                    <div class="invalid-feedback">Please enter a comment.</div>
                </div>
                <button type="submit" class="btn btn-outline-dark">Submit Review</button>

            </form>
            <hr>
            <p><b>All Reviews</b></p>

            <div class="row">
                <% for(let review of listing.review){ %>
                    <div class="card col-5 ms-3 mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Anil y</h5>
                            <p class="card-text">
                                <%= review.comment %>
                            </p>
                            <p class="card-text">
                                <%= review.rating %> stars
                            </p>
                            <form class="mb-3"
                                action="/listing/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                                method="POST">
                                <button class="btn btn-sm btn-dark">Delete</button>
                            </form>
                        </div>

                    </div>
                    <% } %>
            </div>
        </div>
    </div>